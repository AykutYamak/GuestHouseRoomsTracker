<html>
    <head>
        <link rel="stylesheet" href="~/css/homeIndex.css" />
    </head>
    <body>
    <!-- Hero Section -->
    <section class="hero">
        <div class="floating-element"></div>
        <div class="floating-element"></div>
        <div class="floating-element"></div>

        <div class="hero-content">
            <h1>Serenity Guest House</h1>
            <p>Experience comfort and tranquility in our beautifully appointed rooms. Your perfect getaway awaits.</p>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div>
            <h2 class="section-title fade-in">Why Choose Serenity?</h2>

            <div class="features-grid">
                <div class="feature-card fade-in">
                    <div class="feature-icon">🏠</div>
                    <h3>Comfortable Rooms</h3>
                    <p>Spacious, well-appointed rooms with modern amenities and stunning views. Each room is designed for your ultimate comfort and relaxation.</p>
                </div>

                <div class="feature-card fade-in">
                    <div class="feature-icon">🍳</div>
                    <h3>Delicious Breakfast</h3>
                    <p>Start your day with our complimentary breakfast featuring local ingredients and fresh, homemade options prepared with love.</p>
                </div>

                <div class="feature-card fade-in">
                    <div class="feature-icon">📍</div>
                    <h3>Prime Location</h3>
                    <p>Perfectly situated near local attractions, restaurants, and transportation. Explore the best of the area right from our doorstep.</p>
                </div>

                <div class="feature-card fade-in">
                    <div class="feature-icon">🌟</div>
                    <h3>Exceptional Service</h3>
                    <p>Our dedicated staff is committed to making your stay memorable. We're here to help with recommendations and any special requests.</p>
                </div>

                <div class="feature-card fade-in">
                    <div class="feature-icon">🚗</div>
                    <h3>Free Parking</h3>
                    <p>Complimentary secure parking available for all guests. No need to worry about finding a spot or additional parking fees.</p>
                </div>

                <div class="feature-card fade-in">
                    <div class="feature-icon">📶</div>
                    <h3>High-Speed WiFi</h3>
                    <p>Stay connected with our reliable, high-speed internet throughout the property. Perfect for both leisure and business travelers.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact" id="contact">
        <div class="container">
            <div class="contact-content fade-in">
                <h2>Ready to Book Your Stay?</h2>
                <p>Contact us today to reserve your room or ask any questions. We're here to make your visit unforgettable.</p>

                <div class="contact-info">
                    <div class="contact-item fade-in">
                        <span class="contact-icon">📞</span>
                        <h3>Call Us</h3>
                        <p>+1 (555) 123-4567</p>
                    </div>

                    <div class="contact-item fade-in">
                        <span class="contact-icon">✉️</span>
                        <h3>Email Us</h3>
                        <p>info@serenityguesthouse.com</p>
                    </div>

                    <div class="contact-item fade-in">
                        <span class="contact-icon">📍</span>
                        <h3>Visit Us</h3>
                        <p>123 Peaceful Lane<br>Tranquil City, TC 12345</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Scroll Animation
        function revealElements() {
            const elements = document.querySelectorAll('.fade-in');
            const windowHeight = window.innerHeight;

            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;

                if (elementTop < windowHeight - elementVisible) {
                    element.classList.add('visible');
                }
            });
        }

        window.addEventListener('scroll', revealElements);
        window.addEventListener('load', revealElements);

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Admin Login Function
        function showAdminLogin() {
            const password = prompt('Enter admin password:');
            if (password === 'admin123') {
                alert('Login successful! Redirecting to admin panel...');
                // Here you would redirect to your admin panel
                // window.location.href = '/admin';
            } else if (password !== null) {
                alert('Invalid password. Access denied.');
            }
        }

        // Add parallax effect to hero section
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const hero = document.querySelector('.hero');
            if (hero) {
                hero.style.transform = `translateY(${scrolled * 0.5}px)`;
            }
        });

        // Add interactive hover effects
        document.querySelectorAll('.feature-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px) scale(1.02)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });
    </script>
    </body>
</html>


@using GuestHouseRoomsTracker.Models.Entities
@using Microsoft.AspNetCore.Identity
﻿@using GuestHouseRoomsTracker.Utility
@using System.Globalization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyGuestRooms</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GuestHouseRoomsTracker.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/7faa6cd8-0e90-4cea-8f26-1a4f84c5edb3-removebg-preview.png"
                         alt="Къща за гости ДАРИ"
                         width="80"
                         height="80">
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.IsInRole(SD.AdminRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Room" ? "active" : "")"
                                   asp-area=""
                                   asp-controller="Room"
                                   asp-action="Index">
                                    🏠 Стаи
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reservation" ? "active" : "")"
                                   asp-area=""
                                   asp-controller="Reservation"
                                   asp-action="Index">
                                    📋 Резервации
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        <partial name="_LoginPartial" />
                        <partial name="_Notification" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @if (User.IsInRole(SD.AdminRole))
    {
        <footer class="admin-footer" style="position:relative;">
            <div class="footer-overlay"></div>
            <div class="container py-5">
                <div class="row">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <strong class="footer-brand">Къща за гости "ДАРИ"</strong>
                            <span class="admin-badge ms-3">Админски панел</span>
                        </div>
                        <p class="mb-2 footer-subtitle">Professional reservation management system</p>
                        <p class="mb-0 footer-copyright">&copy; @DateTime.Now.Year - All rights reserved</p>
                    </div>
                    <div class="col-md-3">
                        <h6 class="footer-heading mb-3">Quick Links</h6>
                        <ul class="list-unstyled footer-links">
                            @if (User.IsInRole(SD.AdminRole))
                            {
                                <li>
                                    <a asp-area="" asp-controller="Room" asp-action="Index" class="footer-link">
                                        <span class="link-icon">🏠</span> Управлявай стаите
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Reservation" asp-action="Index" class="footer-link">
                                        <span class="link-icon">📋</span> Прегледай резервациите
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h6 class="footer-heading mb-3">System Info</h6>
                        <div class="system-info">
                            <div class="info-item">
                                <span class="info-label">Version:</span>
                                <span class="info-value">1.0.0</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Updated:</span>
                                <span class="info-value">@CultureInfo.CurrentCulture.DateTimeFormat.GetAbbreviatedMonthName(8) @DateTime.Now.ToString("yyyy")</span>
                            </div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="status-badge mt-3">
                                    <span class="status-icon">🔒</span>
                                    <span>Secure Access</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="footer-divider"></div>
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="footer-features">
                            <span class="feature-item">🔐 Secure Access</span>
                            <span class="feature-item">🏨 Hotel Management</span>
                            <span class="feature-item">⚡ Real-time Tracking</span>
                        </div>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="powered-by">
                            <span class="tech-stack">Powered by ASP.NET Core</span>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    }
    else{
        <footer class="admin-footer" style="position:relative;">
            <div class="footer-overlay"></div>
            <div class="container py-5">
                <div class="row">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <strong class="footer-brand">Къща за гости "ДАРИ"</strong>
                        </div>
                        <p class="mb-2 footer-subtitle">Professional reservation management system</p>
                        <p class="mb-0 footer-copyright">&copy; @DateTime.Now.Year - All rights reserved</p>
                    </div>
                    <div class="col-md-4 text-md-end" style="align-content:flex-end;">
                        <div class="powered-by">
                            <span class="tech-stack">Powered by ASP.NET Core</span>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

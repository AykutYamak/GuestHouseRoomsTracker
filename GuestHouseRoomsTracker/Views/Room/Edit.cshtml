@model GuestHouseRoomsTracker.Models.Room.RoomEditViewModel

@{
    ViewData["Title"] = "Редактиране на стая";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex align-items-center">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm me-3">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                        <h4 class="mb-0 text-dark fw-semibold">Редактиране на стая</h4>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="RoomNumber" class="form-label fw-semibold">Номер на стая</label>
                                    <input asp-for="RoomNumber" class="form-control form-control-lg"
                                           placeholder="Въведете номер" required>
                                    <span asp-validation-for="RoomNumber" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Capacity" class="form-label fw-semibold">Капацитет</label>
                                    <input asp-for="Capacity" type="number" class="form-control form-control-lg"
                                           min="1" placeholder="Брой места" required>
                                    <span asp-validation-for="Capacity" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Добавете описание на стаята..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill">
                                <i class="fas fa-save me-2"></i>Актуализирай
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                                Отказ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

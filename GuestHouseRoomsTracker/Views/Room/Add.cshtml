@model GuestHouseRoomsTracker.Models.Room.RoomCreateViewModel;

@{
    ViewData["Title"] = "Добави стая";
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/roomAdd.css" />
    </head>
    <body>
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Header Banner -->
                <div class="header-banner">
                    <div class="header-content">
                        <h1 class="header-title">
                            <i class="fas fa-plus-circle me-3"></i>Добави стая
                        </h1>
                        <p class="header-subtitle">Създайте нова стая за вашата къща за гости</p>
                    </div>
                </div>

                <div class="main-card">
                    <div class="card-header-custom">
                        <div class="breadcrumb-nav">
                            
                            <h2 class="page-title">Информация за стаята</h2>
                            <a asp-action="Index" asp-controller="Room" class="btn-back">
                                <i class="fas fa-arrow-left me-2"></i>Назад към стаите
                            </a>
                        </div>
                    </div>

                    <div class="form-container">
                        <form method="post">
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="RoomNumber" class="form-label">
                                            <i class="fas fa-hashtag me-2"></i>Номер на стая
                                        </label>
                                        <div class="input-group-custom">
                                            <input asp-for="RoomNumber" class="form-control form-control-lg"
                                                   placeholder="напр. 101, A1, Делукс...">
                                        </div>
                                        <span asp-validation-for="RoomNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Capacity" class="form-label">
                                            <i class="fas fa-users me-2"></i>Капацитет
                                        </label>
                                        <div class="input-group-custom">
                                            <input asp-for="Capacity" type="number" class="form-control form-control-lg"
                                                   min="1" max="20" placeholder="Брой места">
                                        </div>
                                        <span asp-validation-for="Capacity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="form-label">
                                    <i class="fas fa-align-left me-2"></i>Описание
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="4"
                                          placeholder="Добавете подробно описание на стаята - удобства, изглед, специални характеристики..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div>
                                <div class="form-group">
                                    <label asp-for="Notes" class="form-label">
                                        <i class="fas fa-hashtag me-2"></i>Бележки
                                    </label>
                                    <div class="input-group-custom">
                                        <input asp-for="Notes" class="form-control form-control-lg"
                                               placeholder="Неизправен телевизор, в ремонт...">
                                    </div>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="button-group">
                                <button type="submit" asp-action="Add" asp-controller="Room"
                                        class="btn-primary-custom">
                                   Запази стаята
                                </button>
                                <a asp-action="Index" asp-controller="Room" class="btn-secondary-custom">
                                    Отказ
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>

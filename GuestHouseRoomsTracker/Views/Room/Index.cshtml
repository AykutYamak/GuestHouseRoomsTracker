@model GuestHouseRoomsTracker.Models.Room.RoomViewModel;
@{
    ViewData["Title"] = "Управление на стаи";
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/roomIndex.css" />
    </head>
    <body>
    <div class="container-fluid py-4" style="background: linear-gradient(135deg, #f5f1eb 0%, #e8ddd4 100%); min-height: 100vh;">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <!-- Header Section -->
                <div class="text-center mb-5">
                    <div class="header-banner">
                        <div class="header-content">
                            <h1 class="header-title">
                                <i class="fas fa-bed me-3"></i>Управление на стаи
                            </h1>
                            <p class="header-subtitle">Управлявайте стаите на вашият хотел</p>
                        </div>
                    </div>
                </div>

                <div class="main-card">
                    <div class="card-header-custom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0 text-dark fw-bold">Списък със стаи</h4>
                            <a class="btn btn-add-room" asp-controller="Room" asp-action="Add">
                              Добави стая
                            </a>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        @if (Model.Rooms.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 custom-table">
                                    <thead class="table-header">
                                        <tr>
                                            <th class="border-0 fw-semibold">Номер</th>
                                            <th class="border-0 fw-semibold">Капацитет</th>
                                            <th class="border-0 fw-semibold">Описание</th>
                                            <th class="border-0 fw-semibold">Бележки</th>
                                            <th class="border-0 fw-semibold">Статус</th>
                                            <th class="border-0 fw-semibold text-center">Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var room in Model.Rooms)
                                        {
                                            <tr class="room-row">
                                                <td class="align-middle fw-medium room-number">@room.RoomNumber</td>
                                                <td class="align-middle">@room.Capacity</td>
                                                <td class="align-middle">
                                                    <span class="text-truncate d-inline-block" style="max-width: 200px;">
                                                        @room.Description
                                                    </span>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="text-truncate d-inline-block" style="max-width: 200px;">
                                                        @room.Notes
                                                    </span>
                                                </td>
                                                <td class="align-middle">
                                                    @if (room.IsActive == true)
                                                    {
                                                        <span class="status-badge status-active">
                                                            <i class="fas fa-check-circle me-1"></i>Активна
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="status-badge status-inactive">
                                                            <i class="fas fa-times-circle me-1"></i>Неактивна
                                                        </span>
                                                    }
                                                </td>
                                                <td class="align-middle text-center">
                                                    <div class="d-flex gap-2 justify-content-center">
                                                        <a class="btn btn-edit" asp-controller="Room" asp-action="Edit" asp-route-id="@room.Id">
                                                            Редактирай
                                                        </a>
                                                        <button type="button" class="btn btn-delete" onclick="confirmDelete('@room.Id')">
                                                            Изтрий
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <div class="empty-icon">
                                    <i class="fas fa-bed"></i>
                                </div>
                                <h5 class="empty-title">Няма намерени стаи</h5>
                                <p class="empty-subtitle">Започнете като добавите първата стая.</p>
                                <a class="btn btn-add-room" asp-controller="Room" asp-action="Add">
                                   Добави първата стая
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content custom-modal">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>Потвърждение
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body py-4">
                    <p class="mb-0">Сигурни ли сте, че искате да изтриете тази стая?</p>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отказ</button>
                    <form id="deleteForm" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
               function confirmDelete(roomId) {
            const deleteUrl = '@Url.Action("Delete", "Room")' + '/' + roomId;
            document.getElementById('deleteForm').action = deleteUrl;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
    </body>
</html>

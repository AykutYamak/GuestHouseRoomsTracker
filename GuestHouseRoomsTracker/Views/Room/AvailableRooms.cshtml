@model GuestHouseRoomsTracker.Models.Room.RoomAvailabilityViewModel

@{
    ViewData["Title"] = "Налични стаи";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-0 py-3">
                    <div class="d-flex align-items-center">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm me-3">
                            <i class="fas fa-arrow-left"></i>
                        </a>
                        <div>
                            <h4 class="mb-0 text-dark fw-semibold">Налични стаи</h4>
                            <small class="text-muted">
                                @Model.CheckInDate.ToString("dd.MM.yyyy") - @Model.CheckOutDate.ToString("dd.MM.yyyy")
                            </small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.AvailableRooms.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0 fw-semibold text-muted">Номер</th>
                                        <th class="border-0 fw-semibold text-muted">Капацитет</th>
                                        <th class="border-0 fw-semibold text-muted">Описание</th>
                                        <th class="border-0 fw-semibold text-muted text-center">Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var room in Model.AvailableRooms)
                                    {
                                        <tr class="room-row">
                                            <td class="align-middle fw-medium">@room.RoomNumber</td>
                                            <td class="align-middle">@room.Capacity</td>
                                            <td class="align-middle">
                                                <span class="text-truncate d-inline-block" style="max-width: 300px;">
                                                    @room.Description
                                                </span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <a href="@Url.Action("Details", new { id = room.Id })"
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i>Преглед
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Няма налични стаи</h5>
                            <p class="text-muted">За избрания период няма свободни стаи.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
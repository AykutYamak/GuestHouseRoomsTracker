@using System.Globalization
@model GuestHouseRoomsTracker.Models.Reservations.ReservationFilterViewModel
@{
    ViewData["Title"] = "Управление на резервации";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/roomIndex.css" />
</head>
<body>
    <div class="container-fluid py-4" style="background: linear-gradient(135deg, #f5f1eb 0%, #e8ddd4 100%); min-height: 100vh;">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <div class="text-center mb-5">
                    <div class="header-banner">
                        <div class="header-content">
                            <h1 class="header-title">
                                Управление на резервации
                            </h1>
                            <p class="header-subtitle">Преглед и филтриране на резервации</p>
                        </div>
                    </div>
                </div>

                <div class="main-card mb-4">
                    <div class="card-header-custom">
                        <h4 class="mb-0 text-dark fw-bold">Филтриране по дати</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Index" method="post">
                            @Html.AntiForgeryToken()
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="CheckInDate" class="form-label"> <i class="bi bi-calendar3 me-2">Дата на настаняване от:</i></label>
                                    <input type="date" asp-for="CheckInDate" class="form-control" value="@Model.CheckInDate?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CheckOutDate" class="form-label">Дата на напускане до:</label>
                                    <input type="date" asp-for="CheckOutDate" class="form-control" value="@Model.CheckOutDate?.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                            <div class="mt-3 d-flex gap-4">
                                <button type="submit" class="btn btn-add-room">Приложи филтрите</button>
                                @if (Model.CheckInDate.HasValue || Model.CheckOutDate.HasValue)
                                {
                                    <button type="button" class="btn btn-outline-danger" onclick="clearFilters()">
                                        <i class="fas fa-times me-1"></i>Изчисти филтрите
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                </div>

                <div class="main-card">
                    <div class="card-header-custom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0 text-dark fw-bold">Списък с резервации</h4>
                            <a class="btn btn-add-room" asp-controller="Reservation" asp-action="Add">
                                Създай резервация
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.Reservations.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 custom-table">
                                    <thead class="table-header">
                                        <tr>
                                            <th class="border-0 fw-semibold">Гост</th>
                                            <th class="border-0 fw-semibold">Телефон</th>
                                            <th class="border-0 fw-semibold">Стая</th>
                                            <th class="border-0 fw-semibold">Настаняване</th>
                                            <th class="border-0 fw-semibold">Напускане</th>
                                            <th class="border-0 fw-semibold">Бележки</th>
                                            <th class="border-0 fw-semibold">Статус</th>
                                            <th class="border-0 fw-semibold">Действия</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var r in Model.Reservations)
                                        {
                                            <tr class="room-row">
                                                <td class="align-middle">@r.GuestName</td>
                                                <td class="align-middle">@r.PhoneNumber</td>
                                                <td class="align-middle">@r.Room?.RoomNumber</td>
                                                <td class="align-middle">@r.CheckInDate.Day.ToString() @CultureInfo.CurrentCulture.DateTimeFormat.GetAbbreviatedMonthName(@r.CheckInDate.Month) @r.CheckInDate.Year.ToString()</td>
                                                <td class="align-middle">@r.CheckOutDate.Day.ToString() @CultureInfo.CurrentCulture.DateTimeFormat.GetAbbreviatedMonthName(@r.CheckOutDate.Month) @r.CheckOutDate.Year.ToString()</td>
                                                <td class="align-middle">@r.Notes</td>
                                                <td class="align-middle">
                                                    @if (r.Status == DNBarbershop.Models.EnumClasses.ReservationStatus.Completed)
                                                    {
                                                        <span class="status-badge status-completed">
                                                            <i class="fas fa-check-circle me-1"></i>
                                                            Минала
                                                        </span>
                                                    }
                                                    else if (r.Status == DNBarbershop.Models.EnumClasses.ReservationStatus.Scheduled)
                                                    {
                                                        <span class="status-badge status-scheduled">
                                                            <i class="fas fa-clock me-1"></i>
                                                            Предстояща
                                                        </span>
                                                    }
                                                    else if (r.Status == DNBarbershop.Models.EnumClasses.ReservationStatus.Current)
                                                    {
                                                        <span class="status-badge status-current">
                                                            <i class="fas fa-play-circle me-1"></i>
                                                            Текуща
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="status-badge status-cancelled">
                                                            <i class="fas fa-times-circle me-1"></i>
                                                            Отменена
                                                        </span>
                                                    }
                                                </td>
                                                <td class="align-middle text-center">
                                                    <div class="d-flex gap-2 justify-content-center">
                                                        <a class="btn btn-edit" asp-controller="Reservation" asp-action="Edit" asp-route-id="@r.Id">
                                                            Редактирай
                                                        </a>
                                                        <button type="button" class="btn btn-delete" onclick="confirmDelete('@r.Id')">
                                                            Изтрий
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">   
                                <h5 class="empty-title">Няма намерени резервации</h5>
                                <p class="empty-subtitle">Няма съвпадения с избраните филтри.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content custom-modal">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>Потвърждение
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body py-4">
                    <p class="mb-0">Сигурни ли сте, че искате да изтриете тази резервация?</p>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отказ</button>
                    <form id="deleteForm" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
               function confirmDelete(roomId) {
            const deleteUrl = '@Url.Action("Delete", "Reservation")' + '/' + roomId;
            document.getElementById('deleteForm').action = deleteUrl;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
         function clearFilters() {
            // Clear the date input fields
            document.querySelector('input[name="CheckInDate"]').value = '';
            document.querySelector('input[name="CheckOutDate"]').value = '';

            // Redirect to the Index action without any parameters to show all reservations
            window.location.href = '@Url.Action("Index", "Reservation")';
        }
    </script>
</body>
</html>
